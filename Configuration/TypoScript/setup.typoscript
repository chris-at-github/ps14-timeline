// ---------------------------------------------------------------------------------------------------------------------
// Settings
plugin.tx_ps14timeline {
	settings {
		media {
			maxHeight = 300
			cropVariant = default
			mediaQueries {
				992 {
					maxHeight = 300
					cropVariant = default
					mediaQuery = (min-width: 992px)
				}
				576 {
					maxHeight = 200
					cropVariant = default
					mediaQuery = (min-width: 576px)
				}
				0 {
					maxWidth = 490
					cropVariant = default
					mediaQuery = (min-width: 0px)
				}
			}
		}
	}
}